<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:gravity="center_horizontal"
    tools:context="com.example.marcin.nudzimisie.StartScreen"
    android:weightSum="1">

    <ImageView
        android:layout_width="182dp"
        android:layout_height="134dp"

        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"

        android:background="@drawable/initialising_logo" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="344dp">

        <ImageView
            android:layout_height="162dp"
            android:layout_columnWeight="1"
            android:id="@+id/imageButton1"
            android:src="@drawable/zwiedzac"
            android:padding="1dp"
            android:onClick="firstButton"
            android:layout_marginBottom="20dp"
            android:layout_row="0"
            android:layout_width="164dp" />

        <ImageView
            android:layout_height="164dp"
            android:layout_columnWeight="1"
            android:id="@+id/imageButton2"
            android:src="@drawable/rozrywka"
            android:padding="1dp"
            android:onClick="secondButton"
            android:layout_row="1"
            android:layout_width="164dp"
            android:layout_column="1" />

        <ImageView
            android:layout_height="164dp"
            android:layout_columnWeight="1"
            android:id="@+id/imageButton4"
            android:src="@drawable/jesc"
            android:padding="1dp"
            android:onClick="thirdButton"
            android:layout_row="1"
            android:layout_width="164dp"
            android:layout_column="0" />

        <ImageView
            android:layout_height="164dp"
            android:layout_columnWeight="1"
            android:id="@+id/imageButton3"
            android:src="@drawable/sport"
            android:padding="1dp"
            android:onClick="fourthButton"
            android:layout_row="0"
            android:layout_width="164dp"
            android:layout_column="1" />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ryje0"
            android:id="@+id/imageView" />
    </LinearLayout>

</LinearLayout>
