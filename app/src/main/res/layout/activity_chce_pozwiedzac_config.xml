<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.marcin.nudzimisie.StartScreen"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="63dp"

            android:id="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/chce_zwiedzac2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Mam:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:id="@+id/textView5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="wrap_content"
            android:id="@+id/klepsydra"
            android:layout_width="wrap_content"
            android:background="@drawable/klepsydra"
            android:padding="1dp"
            android:layout_row="0"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.35" />

        <SeekBar
            android:layout_width="258dp"
            android:layout_height="55dp"
            android:id="@+id/seekBarCzas"
            android:layout_row="0"
            android:layout_column="1"
            android:max="6"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="71dp"
            android:layout_height="56dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/czasTekst"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Kategorie:"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:id="@+id/textView7"
            android:layout_height="23dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="171dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_height="125dp"
                    android:id="@+id/dworki"
                    android:clickable="true"
                    android:layout_width="250dp"
                    android:background="@drawable/dworki"
                    android:padding="1dp"
                    android:layout_row="0"
                    android:layout_marginLeft="10dp" />
                <ImageView
                    android:layout_height="125dp"
                    android:id="@+id/malaarchitek"
                    android:clickable="true"
                    android:layout_width="250dp"
                    android:background="@drawable/malaarchitek"
                    android:padding="1dp"
                    android:layout_row="0"
                    android:layout_marginLeft="10dp" />
                <ImageView
                    android:layout_height="125dp"
                    android:id="@+id/parki"
                    android:clickable="true"
                    android:layout_width="250dp"
                    android:background="@drawable/parki"
                    android:padding="1dp"
                    android:layout_row="0"
                    android:layout_marginLeft="10dp" />
                <ImageView
                    android:layout_height="125dp"
                    android:id="@+id/sakralne"
                    android:clickable="true"
                    android:layout_width="250dp"
                    android:background="@drawable/sakralne"
                    android:padding="1dp"
                    android:layout_row="0"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_height="wrap_content"
            android:id="@+id/pieniadze"
            android:layout_width="wrap_content"
            android:background="@drawable/money"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:layout_row="0"
            android:layout_weight="1" />

        <SeekBar
            android:layout_width="258dp"
            android:layout_height="55dp"
            android:id="@+id/seekBarPieniadze"
            android:layout_row="0"
            android:layout_column="1"
            android:max="20"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="71dp"
            android:layout_height="56dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/pienidzeTekst"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:weightSum="1">

        <ImageView
            android:layout_width="433dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/idz2"
            android:id="@+id/go"
            android:onClick="go"
            android:clickable="true" />

        <ImageView
            android:layout_width="326dp"
            android:layout_height="39dp"
            android:src="@drawable/ryje0"
            android:id="@+id/imageView5" />
    </LinearLayout>

</LinearLayout>
