<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.marcin.nudzimisie.StartScreen"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/trasy_top2"
            android:id="@+id/imageView17"
            android:layout_height="60dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Spacerowa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:id="@+id/textView"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            tools:text="Spacerowa"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/trasa_1"
            android:id="@+id/imageView3"
            android:layout_weight="1" />
        <TextView
            android:text="2h, 5zł"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1"
            tools:text="2h, 5zł"
            android:contentDescription="2h, 5zł"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="95dp"
            android:src="@drawable/trasa_1_img"
            android:onClick="pierwszaTrasa"
            android:id="@+id/imageView1" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="98dp"
            android:src="@drawable/trasa_1_map_img"
            android:id="@+id/imageView2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ostrów Tumski "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:id="@+id/textView_2"
            android:textColor="@color/black"
            android:clickable="true"
            android:onClick="drugaTrasa"
            tools:text="Ostrów Tumski "
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/trasa_2"
            android:id="@+id/imageViewzz"
            android:onClick="drugaTrasa"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />
        <TextView
            android:text="1h, 0zł"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewaa"
            android:layout_weight="1"
            tools:text="1h, 0zł"
            android:contentDescription="1h, 0zł"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="95dp"
            android:src="@drawable/trasa_2_img"
            android:id="@+id/imageView4" />

        <ImageView
            android:layout_width="224dp"
            android:layout_height="98dp"
            android:src="@drawable/trasa_2_map_img"
            android:id="@+id/imageView6" />









</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Wydarzenie w pobliżu!"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewdfdf"
                tools:text="Wydarzenie w pobliżu!"
                android:textSize="20sp"
                android:textStyle="normal|italic" />

            <ImageView
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:src="@drawable/trasa_5"
                android:id="@+id/imageView16" />
            <TextView
                android:text="-h, 0zł"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                tools:text="-h, 0zł"
                android:contentDescription="-h, 0zł"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:text="Oh my wroc love, fashion and art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView10"
            tools:text="Oh my wroc love, fashion and art"
            android:textSize="20sp"
            android:textStyle="normal|bold" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="105dp">


        <ImageView
            android:layout_width="125dp"
            android:layout_height="96dp"
            android:src="@drawable/trasa_5_img"
            android:id="@+id/imageView14"
            android:layout_weight="1.01" />

        <ImageView
            android:layout_width="171dp"
            android:layout_height="99dp"
            android:src="@drawable/trasa_5_map_img"
            android:id="@+id/imageView15"
            android:layout_weight="0.63" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="bottom|center"
        android:weightSum="1">

        <ImageView
            android:layout_width="326dp"
            android:layout_height="39dp"
            android:src="@drawable/ryje1"
            android:id="@+id/imageView18"
           />
    </LinearLayout>

</LinearLayout>