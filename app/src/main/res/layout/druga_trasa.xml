<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.marcin.nudzimisie.StartScreen"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="63dp"

            android:id="@+id/imageVixesaw2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/trasy_top2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="274dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Ostrów Tumski"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/texxasxxstView"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                tools:text="Ostrów Tumski "
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/trasa_1"
                android:id="@+id/imagesdcdscView3"
                android:layout_weight="1" />
            <TextView
                android:text="2h, 0zł"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tescdsdcscxtView2"
                android:layout_weight="1"
                tools:text="2h, 0zł"
                android:contentDescription="2h, 0zł"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:src="@drawable/trasa_3_map_img"
            android:id="@+id/imasdcscgeView7" />

        <TextView
            android:text="Trasa prowadzi od katedry św. Jerzego, przez ogród botaniczny, kościół św. Krzyża, most Tumski oraz zespół wysp - młyńskiej, słodowej oraz bielarskiej."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/textVscscsdciew3"
            android:layout_marginLeft="10dp"
            tools:text="Trasa prowadzi od katedry św. Jerzego, przez ogród botaniczny, kościół św. Krzyża, most Tumski oraz zespół wysp - młyńskiej, słodowej oraz bielarskiej." />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:weightSum="1">

        <ImageView
            android:layout_width="433dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/idz2"
            android:id="@+id/go_2"
            android:clickable="true" />

        <ImageView
            android:layout_width="326dp"
            android:layout_height="39dp"
            android:src="@drawable/ryje2"
            android:id="@+id/imageViescscsdcw5" />
    </LinearLayout>

</LinearLayout>
